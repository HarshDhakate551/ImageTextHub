<form action="/update_data" method="post" enctype="multipart/form-data">
  <fieldset>
      <div class="row g-3 align-items-center">
          <div class="col-auto">
              <label for="SrNo" class="col-form-label">Enter SrNo. :</label>
          </div>
          <div class="col-auto">
              <input type="number" id="SrNo" class="form-control" min="1" name="number"/>
          </div>
          <div class="col-auto">
              <span id="SrNo" class="form-text">
                  Must be greater than 1.
              </span>
          </div>
      </div>
      <br/>
      <div>
          <label for="formFileLg" class="form-label">Input File :</label>
          <input class="form-control form-control-lg form-control-file" id="file" name="file" type="file"/>
      </div>

      <br/>
      <button class="btn btn-primary mb-3" style="margin-left: 47%;">Submit!!</button>
  </fieldset>
</form>

    <div>
        <% if (datas.length === 0) { %>
            <h1>No Quotes found in the database.</h1>
            <% } else { %>
                <h1>Quotes</h1>
                
                <% for (const data of datas) { %>
                <% if (!data.quote) { %>
                    <p>No quote available for this entry.</p>
                    <% } else { %>
                        <h3>
                            <span><%= data.SrNo %>.</span>
                            <span><%= data.quote %></span>
                        </h3>
                        <% } %>
            <% } %>
        <% } %>
                        
    </div>
        <br />
        
    </body>
